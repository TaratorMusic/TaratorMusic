{
	"name": "taratormusic",
	"version": "1.6.1",
	"description": "A desktop music player application with playlist support, music downloading, volume stabilising and Discord integration.",
	"main": "index.js",
	"bin": "index.js",
	"author": {
		"name": "Victiniiiii"
	},
	"scripts": {
		"start": "electron .",
		"pack": "electron-builder --dir",
		"dist": "electron-builder",
		"build": "electron-builder",
		"postinstall": "electron-builder install-app-deps"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Victiniiiii/TaratorMusic.git"
	},
	"build": {
		"publish": [
			{
				"provider": "github",
				"owner": "Victiniiiii",
				"repo": "TaratorMusic",
				"releaseType": "draft"
			}
		],
		"appId": "com.yourdomain.taratormusic",
		"productName": "TaratorMusic",
		"npmRebuild": true,
		"buildDependenciesFromSource": true,
		"directories": {
			"output": "dist"
		},
		"files": [
			"**/*",
			"!musics/**",
			"!thumbnails/**",
			"!databases/**"
		],
		"win": {
			"target": [
				"nsis"
			],
			"icon": "app_thumbnails/tarator_icon.ico",
			"asar": false
		},
		"nsis": {
			"allowToChangeInstallationDirectory": true,
			"oneClick": false,
			"license": "license.txt",
			"publisher": "Victiniiiii"
		},
		"mac": {
			"target": "dmg",
			"icon": "app_thumbnails/tarator_icon.icns"
		},
		"linux": {
			"target": [
				"AppImage"
			],
			"icon": "app_thumbnails/tarator_icon.png",
			"category": "Audio",
			"maintainer": "Victiniiiii",
			"synopsis": "Desktop music player with playlists, downloads, audio processing, and Discord Rich Presence.",
			"asar": false,
			"desktop": {
				"Name": "TaratorMusic",
				"Comment": "Play music with style and Discord integration",
				"StartupWMClass": "TaratorMusic",
				"Terminal": false
			}
		}
	},
	"jest": {
		"testEnvironment": "node",
		"moduleFileExtensions": [
			"js",
			"json"
		],
		"transform": {
			"^.+\\.js$": "babel-jest"
		}
	},
	"dependencies": {
		"@distube/ytdl-core": "github:Victiniiiii/ytdl-core",
		"@distube/ytpl": "github:Victiniiiii/ytpl",
		"@ffmpeg-installer/ffmpeg": "^1.1.0",
		"better-sqlite3": "^11.9.1",
		"discord-rpc": "github:Victiniiiii/RPC-Listening",
		"electron-is-dev": "^3.0.1",
		"electron-updater": "^6.6.2",
		"ffprobe-static": "^3.1.0",
		"fluent-ffmpeg": "^2.1.3",
		"undici": "github:Victiniiiii/undici-fix"
	},
	"devDependencies": {
		"electron": "^31.1.0",
		"electron-builder": "^24.13.3",
		"electron-rebuild": "^3.2.9",
		"jest": "^29.7.0"
	}
}
